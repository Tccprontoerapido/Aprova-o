class AprovaçãoSaladeEstudos:
    """
    Classe que representa a Aprovação Sala de Estudos, um local tranquilo para estudar localizado no Rio de Janeiro, RJ.
    """

    def __init__(self):
        """
        Inicializa a classe com as informações da Aprovação Sala de Estudos.
        """
        self.nome = "Aprovação Sala de Estudos"
        self.endereco = "Rua Voluntários da Pátria 301, sala 701, Botafogo, Rio de Janeiro, RJ"
        self.telefone = "21 99432-1982"
        self.email = "contato@saladefoco.com.br"
        self.site = "https://saladefoco.com.br/"
        self.horarios = {
            "manha": "06h/12h",
            "tarde": "12h/18h",
            "noite": "18h/00h",
        }
        self.planos = {
            "um_turno": {
                "seg_a_sex": 200,
                "sab_e_dom": 250,
                "todos_os_dias": 300,
            },
            "dois_turnos": {
                "seg_a_sex": 350,
                "sab_e_dom": 400,
                "todos_os_dias": 450,
            },
            "tres_turnos": {
                "seg_a_sex": 500,
                "sab_e_dom": 550,
                "todos_os_dias": 600,
            },
        }

    def get_nome(self):
        return self.nome

    def get_endereco(self):
        return self.endereco

    def get_telefone(self):
        return self.telefone

    def get_email(self):
        return self.email

    def get_site(self):
        return self.site

    def get_horarios(self):
        return self.horarios

    def get_planos(self):
        return self.planos

    def agendar_visita(self):
        print("Agende sua visita gratuita através do site de reservas:")
        print(self.site)

    def alugar_cabines(self):
        print("Para alugar uma cabine de estudo, entre em contato com a Aprovação Sala de Estudos pelo telefone ou email:")
        print(self.telefone)
        print(self.email)

    def __str__(self):
        return f"Aprovação Sala de Estudos: {self.nome} - {self.endereco}"


def main():
    # Instancia a classe AprovaçãoSaladeEstudos
    sala = AprovaçãoSaladeEstudos()

    # Exibe as informações da Aprovação Sala de Estudos
    print(sala)
    print(f"Telefone: {sala.get_telefone()}")
    print(f"E-mail: {sala.get_email()}")
    print(f"Site: {sala.get_site()}")

    # Exibe os horários de funcionamento
    print("\nHorários de Funcionamento:")
    for turno, horario in sala.get_horarios().items():
        print(f"{turno.capitalize()}: {horario}")

    # Exibe os planos de assinatura
    print("\nPlanos de Assinatura:")
    for plano, valores in sala.get_planos().items():
        print(f"\n{plano.capitalize()}:")
        for periodo, preco in valores.items():
            print(f"{periodo.replace('_', ' ').capitalize()}: R$ {preco}")

    # Opções adicionais
    print("\nOpções adicionais:")
    sala.agendar_visita()
    sala.alugar_cabines()


if __name__ == "__main__":
    main()
